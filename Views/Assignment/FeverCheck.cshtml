

@model MVCAssignment_1___2.Models.Fever //We a reciving Model Fever wich is inside the Model's Folder, Model's Folder is inside project name

@{
    ViewData["Title"] = "FeverCheck";
}

<h4>Please enter your body temperature</h4>@* Chnaging text *@

@* <h4>Fever</h4> *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FeverCheck">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BTemp" class="control-label"></label>
                <input asp-for="BTemp" class="form-control" />
                <span asp-validation-for="BTemp" class="text-danger"></span>
            </div>
           @*  <div class="form-group">
                <label asp-for="Resultat" class="control-label"></label>
                <input asp-for="Resultat" class="form-control" />
                <span asp-validation-for="Resultat" class="text-danger"></span>
            </div> *@

            <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="check1" name="celcius" value="option1" checked>
                   <label class="form-check-label">Celsius</label>
           </div>
            <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="check2" name="fahrenheit" value="option2">
                   <label class="form-check-label">Fahrenheit</label>
           </div>

            <div class="form-group my-2">@* Adding margin for the button *@
                <input type="submit" value="Take a test" class="btn btn-primary" />@* Changing capture name *@
            </div>

            <div>
                <h2>@Model.Resultat</h2>@* // Adding object of Fever . To be able to display a message for the user*@
            </div>
        </form>
    </div>
</div>

